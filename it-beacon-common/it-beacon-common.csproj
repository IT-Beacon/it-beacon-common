<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<RootNamespace>it_beacon_common</RootNamespace>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- NuGet package info -->
		<PackageId>it-beacon-common</PackageId>
		<Version>1.0.0</Version>
		<Authors>Your Name or Org</Authors>
		<Company>Your University</Company>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/YourOrg/it-beacon-common</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
	</PropertyGroup>

	<!-- Keep your existing folder includes -->
	<ItemGroup>
		<Folder Include="Assets\Icons\" />
		<Folder Include="Assets\Images\" />
		<Folder Include="Helpers\" />
		<Folder Include="Models\" />
	</ItemGroup>

	<!-- Include all files in Assets in the NuGet package -->
	<ItemGroup>
		<None Include="Assets\**\*" Pack="true" PackagePath="assets\" />
	</ItemGroup>

	<ItemGroup>
		<None Include="Config\**\*" Pack="true" PackagePath="config\" />
	</ItemGroup>
	

</Project>
